<h1>Your Cart</h1>

<% if @cart %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th></th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.product.name %></td>
          <td></td>
          <td><%= cart_item.quantity %></td>
          <td><%= button_to 'remove_from_cart', cart_path %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p>Your cart is empty.</p>
<% end %>
